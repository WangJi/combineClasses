{
  "name": "partial_classes",
  "version": "1.1.0",
  "description": "Powerful partial-class style composition for TypeScript with type-safe class merging and lifecycle hooks.",
  "homepage": "https://github.com/WangJi/combineClasses",
  "repository": {
    "type": "git",
    "url": "https://github.com/WangJi/combineClasses"
  },
  "keywords": [
    "typescript",
    "mixin",
    "extend",
    "composition",
    "merging",
    "partial",
    "combine",
    "classes",
    "decorator"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "dev": "tsup --watch",
    "prepare": "npm run build",
    "test": "vitest run"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "devDependencies": {
    "typescript": "^5.2.2",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "tsup": "^8.5.1"
  }
}
